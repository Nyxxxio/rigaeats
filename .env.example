#############################################
# Core Application Configuration (Example)  #
#############################################

# === Supabase (Database & Auth) ===
NEXT_PUBLIC_SUPABASE_URL=
# Public anon key if you later use client-side Supabase (not currently required by server APIs)
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service role key (KEEP SECRET). Needed for server migrations/seeding and certain elevated operations.
SUPABASE_SERVICE_ROLE_KEY=

#############################################
# Google Calendar (Service Account)          #
#############################################
# Provide either GOOGLE_PRIVATE_KEY or GOOGLE_PRIVATE_KEY_B64
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
# GOOGLE_PRIVATE_KEY_B64=
GOOGLE_CALENDAR_ID=
# GOOGLE_CALENDAR_TIMEZONE=
# GOOGLE_CALENDAR_INVITE_ATTENDEES=false

#############################################
# JWT / Auth Secrets                         #
#############################################
AUTH_SECRET=
AUTH_SECRET_PREV=
AUTH_TOKEN_VERSION=1

#############################################
# Rate Limiting (Optional)                   #
#############################################
# In-memory fallback already works. Set REDIS_URL to enable Redis-backed limiter in production.
REDIS_URL=
# RL_MAX_FAILS=5
# RL_WINDOW_MS=600000
# RL_LOCK_MS=900000

#############################################
# Admin Credentials                          #
#############################################
# Production: set ADMIN_USERNAME + ADMIN_PASSWORD_HASH only.
ADMIN_USERNAME=
ADMIN_PASSWORD_HASH=

# Development-only (used when no hash is set & NODE_ENV !== production)
DEV_ADMIN_USERNAME=singhsres
DEV_ADMIN_PASSWORD=thisissinghsres

#############################################
# Restaurant Defaults                        #
#############################################
DEFAULT_RESTAURANT_SLUG=singhs
DEV_RESTAURANT_SLUG=singhs

#############################################
# Misc / Build                               #
#############################################
# NODE_ENV is usually injected by the platform (do not hardcode production here)
# NODE_ENV=development
